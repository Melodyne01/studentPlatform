{% extends 'base.html.twig' %}

{% block body %}

<center>
  <br>
  {% for message in app.flashes("success") %}
    <div class="alert alert-success col-md-5">
      {{ message }}
    </div>
  {% endfor %}
  {% for message in app.flashes("danger") %}
  <br>
  <div class="alert alert-danger">
      {{ message }}
  </div>
  {% endfor %}
</center>

<div class="jumbotron text-center">
  <h1>{{controller_name}}</h1>
</div>
<div class="container">
  {{form_start(form)}}
	{{ form_errors(form) }}

  <div class="form-row">
    <div class="col">
      {{form_row(form.Name, {'attr':{'placeholder':'Name of the UE'}})}}
    </div>
    <div class="col">
      {{form_row(form.Cr_Nbr, {'label':'Nbr of credit(s)', 'attr':{'placeholder':'Nbr of credit(s)'}})}}
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <button type="submit" class="btn btn-primary btn-lg btn-block">Add UE</button>
    </div>
  </div>
</div>
<br>
<div class="jumbotron text-center">
    <h1>List of UE</h1>
</div>
<table class="table table-hover">
    <thead>
      <tr class="table-primary">
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Nbr of credits</th>
        <th scope="col"></th>

      </tr>
    </thead>

{% for product in products %}
<tr >
    <th scope="row">{{product.id}}</th>
    <td>{{product.Name}}</td>
    <td>{{product.CrNbr}}</td>
    <td><a href="{{ path('deleteUE', {id: product.id}) }}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
      <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
    </svg></a></td>
    
  </tr>
{% endfor %}
</table>
{% endblock %}
